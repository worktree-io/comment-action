{
  "name": "comment-action",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "description": "GitHub Action that posts an Open workspace comment on new issues",
  "type": "module",
  "main": "dist/index.mjs",
  "scripts": {
    "build": "ncc build src/index.mjs -o dist --license licenses.txt",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.3",
    "eslint-config-agent": "^2.0.1",
    "simple-git-hooks": "^2.13.1"
  }
}
